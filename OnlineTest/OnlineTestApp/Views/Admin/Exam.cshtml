@model OnlineTestEntities.Question

<!DOCTYPE html>
<head>
    <title>CSC OnlineTest</title>
</head>
<link href="~/Content/global.css" rel="stylesheet" type="text/css" />

<body>
<div class="container">
    <div class="header">
        <div class="logo">
            <img  title="CSC" src="~/Images/csc.png" alt="" width="110" height="70">
        </div>
        <div class="candidate_info">
            Welcome,<strong>{{Profile.firstname}}{{Profile.lastname}}</strong><br/>Candidate ID:{{Profile.Candidate ID}}
        </div>
        <div class="timer">
            <iframe src="http://free.timeanddate.com/countdown/i547tf5w/n438/cf100/cm0/cu4/ct0/cs0/ca0/co0/cr0/ss0/cac000/cpc000/pcfff/tc66c/fn3/fs100/szw192/szh81/iso2016-03-20T00:59:59" allowTransparency="true" frameborder="0" width="300" height="81"></iframe>

        </div>
    </div>
    <div class="body_container">
        <div class="body_left">
            <div class="question">
                @Html.HiddenFor(model=>model.QuestionId)
