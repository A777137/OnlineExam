                <ol type="A" id="option_menu" > 
                    <li><input type="radio" name="QuestionSet" value="1"/>@Html.DisplayFor(model=>model.Option1)</li>
                    <li><input type="radio" name="QuestionSet" value="2">@Html.DisplayFor(model => model.Option2)</li>
                    <li><input type="radio" name="QuestionSet" value="3">@Html.DisplayFor(model => model.Option3)</li>
                    <li><input type="radio" name="QuestionSet" value="4">@Html.DisplayFor(model => model.Option4)</li>
                </ol>
            </div>
            <div class="footer">
                <div class="foot_img">
                	<img  title="CSC" src="~/Images/review.png" alt="" width="45" height="30">&nbsp&nbsp Mark Question to review<br/>
                </div>
                <div class="foot_prev">
                	<a  onclick="PrevQestion(@Model.QuestionId)" class="btn_prev">&lt; Prev Question</a>
                </div>
                <div class="foot_next">
                    <a href="" ng-click="pat.nextQuestion()" class="btn_next">Next Question &gt;</a>
                </div>

            </div>
        </div>
        <div class="body_right" >
