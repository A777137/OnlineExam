@model System.Collections.Generic.List<OnlineTestApp.Models.PanelCheckboxModel>

@{
    ViewBag.Title = "Create Panel";
}

<h2>Create Panel</h2>

@using(Html.BeginForm())
{
   @Html.AntiForgeryToken()
    <table>
        @for (var i = 0; i < Model.Count(); i++)
        {

            <tr>
                <td>
                    @Html.HiddenFor(it => it[i].EmployeeId)
                    @Html.DisplayFor(it => it[i].EmployeeName)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it[i].Checked, new { Style = "vertical-            align:3px}" })
                </td>
            </tr>

        }
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="Submit" value="submit" class="btn btn-default" />
        </div>
    </div>
}

